<?xml version="1.0"?>
<robot name="first_robot">
  <!--机器人身体部分-->
  <link name="base_link">
    <!--部件外观描述-->
    <visual>
      <!-- 沿着自己几何中心的旋转和pianyi-->
      <origin xyz="0 0 0" rpy="0 0 0" />
      <!--几何图形-->
      <geometry>
        <!--圆柱体，半径为0.10米-->
        <cylinder length="0.12" radius="0.10" />
      </geometry>
      <!-- 材质子标志 - 白色-->
      <material name="white">
        <color rgba="1.0 1.0 1.0 0.5" />
      </material>
    </visual>
  </link>
  <!-- 机器人IMU部件--> 
  <link name="imu_link">  
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.02 0.02 0.02" />
      </geometry>
    </visual>
    <material nme="black">
      <color rgba="0 0 0 0.5" />
    </material>
  </link>
  
  <!--机器人关节-->
  <joint name="imu_joint" type="fixed">
    <!--父部件-->
    <parent link="base_link" />
    <!--子部件-->
    <child link="imu_link" />
    <!--字部件相对于父部件的平移和旋转-->
    <origin xyz="0 0 0.03" rpy="0 0 0" />
  </joint>

</robot>
